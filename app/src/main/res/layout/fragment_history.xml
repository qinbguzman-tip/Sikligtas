<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.history.HistoryFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:src="@drawable/start_end_ic" />

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/start_loc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Start Location"
                    android:textColor="@color/md_theme_light_card_primary"
                    android:textColorHint="@color/md_theme_light_card_primary"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/end_loc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="End Location"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/curr_date_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:hint="00/00/00 00:00"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/gray"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/elapsed_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="5:00"
                    android:gravity="end"
                    android:textColor="@color/md_theme_light_card_primary"
                    android:textColorHint="@color/md_theme_light_card_primary"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/elapsed_time_lbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Elapsed Time"
                    android:gravity="end"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="1km"
                    android:gravity="end"
                    android:textColor="@color/md_theme_light_card_primary"
                    android:textColorHint="@color/md_theme_light_card_primary"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/distance_lbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Distance"
                    android:gravity="end"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/gray"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>