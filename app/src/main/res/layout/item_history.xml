<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/start_loc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Start Location"
                app:drawableStartCompat="@drawable/ic_location"
                android:drawableTint="@color/gray"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/end_loc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="End Location"
                app:drawableStartCompat="@drawable/ic_location"
                android:drawableTint="@color/md_theme_light_card_primary"
                android:textColor="@color/md_theme_light_card_primary"
                android:textColorHint="@color/md_theme_light_card_primary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/curr_date_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:hint="00/00/00 00:00"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/elapsed_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:hint="5:00"
                android:textColor="@color/md_theme_light_card_primary"
                android:textColorHint="@color/md_theme_light_card_primary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/elapsed_time_lbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:hint="Elapsed Time"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:hint="1km"
                android:textColor="@color/md_theme_light_card_primary"
                android:textColorHint="@color/md_theme_light_card_primary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/distance_lbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:hint="Distance"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>